<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="30dp" />
            <corners android:radius="15dp" />
            <stroke android:width="4px" android:color="@color/colorTexto" />
            <gradient android:angle="270" android:centerColor="#000000" android:endColor="#2C191C" android:startColor="@color/colorRed" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="30dp" />
            <corners android:radius="15dp" />
            <stroke android:width="2px" android:color="@color/colorFondo" />
            <gradient android:angle="270" android:endColor="#2C191C" android:startColor="@color/colorRed" />
        </shape>
    </item>
</selector>