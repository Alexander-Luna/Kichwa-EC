<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="50dp" />
            <corners android:radius="15dp" />
            <stroke android:width="4px" android:color="@color/colorTexto" />
            <gradient android:angle="270" android:centerColor="@color/colorTexto" android:endColor="@color/colorTextoTitulos" android:startColor="@color/colorBlue" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="50dp" />
            <corners android:radius="15dp" />
            <stroke android:width="2px" android:color="@color/colorTexto" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>