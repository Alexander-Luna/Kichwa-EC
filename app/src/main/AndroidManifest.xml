<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuechuaEC.NoActionBar">
        <activity android:name="com.softec.quechuaec.activitys.ActivityAgregarPalabra" />
        <activity
            android:name="com.softec.quechuaec.activitys.MainActivity"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.softec.quechuaec.activitys.ActivityLogin"
            android:exported="true" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:exported="true"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.ar.core"
            android:exported="true"
            android:value="optional" />
    </application>

</manifest>